{
  "manifest_version": 2,

  "name": "GitHub User Languages",
  "author": "crnbrdrck (Ciaran Broderick)",
  "short_name": "github-user-languages",
  "description": "Draws a pie chart on GitHub User profiles detailing their language breakdown.",
  "version": "0.1.1",

  "content_scripts": [{
    "matches": ["https://github.com/*"],
    "js": ["js/vendor.js", "js/content_script.js"]
  }],

  "icons": {
    "16": "images/github-user-languages.16.png",
    "32": "images/github-user-languages.32.png",
    "48": "images/github-user-languages.48.png",
    "128": "images/github-user-languages.128.png"
  },

  "web_accessible_resources": [
    "colors.json"
  ],

  "permissions": [
    "storage"
  ]
}
