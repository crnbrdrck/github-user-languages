{
  "manifest_version": 2,

  "name": "github-user-languages",
  "description": "See a user's language usage at a glance on their profile.",
  "version": "0.1",

  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },

  "permissions": [
    "storage",
    "declarativeContent",
    "activeTab",
    "<all_urls>"
  ]
}
